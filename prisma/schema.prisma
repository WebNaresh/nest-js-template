generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  first_name  String
  last_name   String
  middle_name String
  email       String @unique
  phone_no    String @unique
}

model OtpStore {
  id         String   @id @default(cuid())
  email      String   @unique
  otp        Int
  created_at DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
